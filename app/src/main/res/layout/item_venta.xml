<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/list_item_background"
    android:gravity="center_vertical">

    <!-- Contenedor de información de la venta -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Nombre del cliente -->
        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cliente: Juan Pérez"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#4A2E2A" />

        <!-- Fecha de la venta -->
        <TextView
            android:id="@+id/tvFechaVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: 2023-01-01"
            android:textSize="14sp"
            android:textColor="#7A554F"
            android:layout_marginTop="4dp" />

        <!-- Total de la venta -->
        <TextView
            android:id="@+id/tvTotalVenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $100.00"
            android:textSize="14sp"
            android:textColor="#7A554F"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Botón para eliminar la venta -->
    <ImageButton
        android:id="@+id/btnEliminar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_deletes"
        android:contentDescription="Eliminar Venta"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="#D9534F"
        tools:ignore="UseAppTint" /> <!-- Icono rojo para eliminar -->
</LinearLayout>
